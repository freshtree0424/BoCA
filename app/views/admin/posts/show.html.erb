<div class="container">
  <h4>投稿詳細画面
    <% if admin_signed_in? %>
      <td><%= link_to 'Destroy', admin_post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_post_#{@post.id}"%></td>
    <% end %>
  </h4>
  <div class="row">
    <div class="col">
        <table class='table'>
          <tr>
            <td align="center">
                <%= link_to admin_user_path(@post.user.id) do %>
                <%= image_tag @post.user.get_profile_image, size:"70x70" %><br>
                <%= @post.user.name%>
                <% end %>
            </td>
            <td><%= link_to @post.title, admin_post_path(@post) %></td>
            <td><%= @post.body %></td>
            <td><% @tags.each do |tag| %>
                  <i class="fa-solid fa-tag"></i>
                   <%= link_to tag.name,admin_search_tag_path(tag_name: tag.name) %>
                <% end %>
            </td>
            <td><%= render "admin/posts/static_rate", post: @post %></td>
            <td id="comment_counter">
              <%= render "admin/post_comments/counter", post: @post %>
            </td>
            <td>閲覧数: <%= @post_detail.view_counts.count %></td>
          </tr>
        </table>
      <div id="post_comment">
       <%= render 'admin/post_comments/post_comment', post: @post %>
      </div>
    </div>
  </div>
</div>