<div class="container">
  <div class="row justify-content-center">
    <h1>カテゴリー編集</h1>
  </div>
  <%= render "admin/shared/error_messages", resource: @category %>
  <div class="row justify-content-center">
    <div class="col-md-8">
    <%= form_with(model: @category, url: admin_category_path(@category), method: :patch, class: 'form-group') do |f| %>
      <div class="row">
        <div class="col-8">
          <div class="form-group">
            <%= f.label :name, "カテゴリー名", class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control', placeholder: 'カテゴリー名を入力してください' %>
          </div>
        </div>
        <div class="col-4 align-self-end">
          <div class="form-group">
            <%= f.submit "更新", class: 'btn btn-success' %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
