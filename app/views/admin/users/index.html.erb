<div class="container">
  <h4><%= @heading %></h4>
  <div class="row">
    <div class="col">
      <table class='table'>
      <thead>
        <tr align="center">
          <th></th>
          <th = style="font-size: 14pt">名前</th>
          <th>自己紹介</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr align="center">
            <td><%= link_to admin_user_path(user) do %>
                <%= image_tag user.get_profile_image, size: '70x70' %>
                <% end %>
            </td>
            <td><%= link_to admin_user_path(user) do %>
                <%= user.name %>
                <% end %>
            </td>
            <td><%= user.introduction %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
  <div class="d-flex justify-content-center">
  <%= paginate @users %>
  </div>
</div>