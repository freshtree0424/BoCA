<table class='table'>
 <tbody>
 <% post.post_comments.each do |post_comment| %>
   <tr>
     <td><%= image_tag post_comment.user.get_profile_image, size:"70x70" %>
         <%= post_comment.user.name %>
     </td>
     <td><%= post_comment.comment %></td>
     <% if admin_signed_in? %>
     <td><%= link_to "Destroy", post_post_comment_path(post, post_comment), method: :delete, class: "btn btn-sm btn-danger", remote: true %></td>
     <% end %>
   </tr>
 <% end %>
 </tbody>
</table>