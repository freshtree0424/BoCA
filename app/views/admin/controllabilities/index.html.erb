<div class="container">
  <h2><%= @heading %></h2>
  <%= render 'admin/questions/link' %>
  <%= render 'admin/questions/model_tab' %>
  <div class="row d-flex justify-content-center" style=" height: auto; margin: 30px 0;">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">項目</th>
          <th scope="col">カテゴリー</th>
          <th scope="col">質問項目</th>
        </tr>
      </thead>
      <tbody>
        <% @controllabilities.each do |controllability| %>
        <tr>
          <th scope="row"><%= controllability.id %></th>
          <td>誠実性</td>
          <td><%= controllability.category.name %></td>
          <td><%= controllability.question %></td>
          <td><%= link_to '編集', edit_admin_controllability_path(controllability), class: 'btn btn-success' %></td>
          <td><%= link_to '削除', admin_controllability_path(controllability), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <%= paginate @controllabilities %>
    </div>
  </div>
</div>