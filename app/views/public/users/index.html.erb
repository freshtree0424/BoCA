<style>
  .fixed-card {
    width: 20rem;
    height: 20rem;
    margin: 5px;
    overflow: auto;
  }
</style>

<div class="container">
  <h4><%= @heading %></h4>
  <div class="row d-flex justify-content-center" style=" height: auto; margin: 30px 0;">
  <% @users.each do |user| %>
    <div class="card bg-light mb-3 fixed-card">
      <div class="card-header">
        <%= link_to (user) do %>
        <%= image_tag user.get_profile_image, size: '70x70' %>
        <% end %>
      </div>
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to (user) do %>
          <%= user.name %>
          <% end %>
        </h5>
        <p class="card-text"><%= user.introduction %></p>
      </div>
    </div>
  <% end %>
  </div>
  <div class="d-flex justify-content-center">
      <%= paginate @users %>
    </div>
</div>