<div class="container">
  <h4><%= @heading %></h4>
  <div class="row">
    <div class="col">
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th = style="font-size: 15pt">本のタイトル</th>
            <th = style="font-size: 15pt">感想</th>
            <th = style="font-size: 15pt">スコア</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= image_tag post.user.get_profile_image, size: '50x50' %></td>
              <td><%= link_to post.title,post_path(post.id) %></td>
              <td><%= post.body %></td>
              <td><%= post.score %></td>
              <td><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></td>
              <td>閲覧数: <%= post.view_counts.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>